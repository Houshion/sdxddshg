<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header bg-blue">
                <i class="widget-icon fa fa-arrow-down"></i>
                <span class="widget-caption">收藏列表</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    <a href="#" data-toggle="dispose">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <a href="{:url('/dlc/user/index/',array('p'=>$pages))}" class="btn btn-primary" data-loader="App-loader" data-loadername="订单列表">
                            <i class="fa fa-mail-reply"></i>返回
                    </a>
                    <a href="#" class="btn btn-danger" id="App-delall">
                        <i class="fa fa-delicious"></i>全部删除
                    </a>
                    <div class="pull-right">
                        <form id="App-search">
                            设备编号:
                            <label style="margin-bottom: 0px;">
                                <input name="user_id" type="hidden" class="form-control input-sm" value="{$user_id}" placeholder="">
                                <input name="pages" type="hidden" class="form-control input-sm" value="{$pages}" placeholder="">
                                <input name="address" type="text" class="form-control input-sm" value="{$address}" placeholder=" 设备编号">
                            </label>  &nbsp;&nbsp;
                            <a href="{:url('/Dlc/user/collect/')}" class="btn btn-success" data-loader="App-loader" data-loadername="设备列表" data-search="App-search">
                                <i class="fa fa-search"></i>搜索
                            </a>
                        </form>
                    </div>
                </div>
                <table id="App-table" class="table table-bordered table-hover">
                    <thead class="bordered-darkorange">
                        <tr role="row">
                            <th width="30px">
                                <div class="checkbox" style="margin-bottom: 0px; margin-top: 0px;">
                                    <label style="padding-left: 4px;"> <input type="checkbox" class="App-checkall colored-blue">
                                     <span class="text"></span>
                                    </label>                                    
                                </div>
                            </th>
                            <th>ID</th>
                            <th>用户昵称</th>
                            <th>设备编号</th>
                            <th>设备名称</th>
                            <th>创建时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        {volist name="result" id="vo" empty= "$empty"}
                            <tr id="item{$vo.id}">
                                <td>
                                    <div class="checkbox" style="margin-bottom: 0px; margin-top: 0px;">
                                        <label style="padding-left: 4px;"> <input name="checkvalue" type="checkbox" class="colored-blue App-check" value="{$vo.id}">
                                         <span class="text"></span>
                                        </label>                                    
                                    </div>
                                </td>
                                <td class=" sorting_1" width="30px">{$vo.id}</td>
                                <td class="">
                                    {if condition="$vo.username neq ''"}
                                        {$vo.username}
                                    {else}
                                        此用户已被后台删除
                                    {/if}
                                </td>
                                <td class=" ">{$vo.macno}</td>
                                <td class=" ">{$vo.device_title}</td>
                                <td class=" ">{$vo.ctime|date='Y-m-d H:i:s',###}</td>
                                <td class="center ">
                                    <div>
                                        <a href="{:url('Dlc/device/collectDel',array('id'=>$vo['id']))}" class="btn btn-danger btn-xs" data-type = "del"
                                         data-ajax="{:url('Dlc/device/collectDel',array('id'=>$vo['id']))}">
                                            <i class="fa fa-trash-o"></i> 删除
                                        </a> 
                                    </div>
                                </td>
                            </tr>
                        {/volist}                
                    </tbody>
                </table>
                 <!-- style="line-height: 32px; height: 32px;" -->
                <div class="row DTTTFooter">
                {$page}
                </div>
            </div>
        </div>
    </div>
</div>
<!--面包屑导航封装-->
<div id="tmpbread" style="display: none;">{$breadhtml}</div>
<script type="text/javascript">
    setBread($('#tmpbread').html());
</script>
<!--/面包屑导航封装-->
<!--全选特效封装/全部删除-->
<script type="text/javascript">
    //全选
    var checkall=$('#App-table .App-checkall');
    var checks=$('#App-table .App-check');
    var trs=$('#App-table tbody tr');
    $(checkall).on('click',function(){
        if($(this).is(":checked")){         
            $(checks).prop("checked","checked");
        }else{
            $(checks).removeAttr("checked");
        }       
    });
    $(trs).on('click',function(){
        var c=$(this).find("input[type=checkbox]");
        if($(c).is(":checked")){
            $(c).removeAttr("checked");
        }else{
            $(c).prop("checked","checked");
        }       
    });
    //全删
    $('#App-delall').on('click',function(){
        var checks=$(".App-check:checked");
        var chk='';
        $(checks).each(function(){
            chk+=$(this).val()+',';
        });
        if(!chk){
            $.App.alert('danger','请选择要删除的项目！');
            return false;
        }
        // var toajax="{:url('/Dlc/device/faultDel')}"+"/fault_id/"+chk;
        var toajax='/Dlc/device/collectDel?id='+chk;
        var funok=function(){
            var callok=function(){
                //成功删除后刷新
                $('#refresh-toggler').trigger('click');
                return false;
            };
            var callerr=function(){
                //拦截错误
                return false;
            };
            $.App.ajax('post',toajax,'nodata',callok,callerr);
        }                       
        $.App.confirm("确认要删除吗？",funok);
    });
</script>
<!--/全选特效封装-->