<!--全选特效封装/全部删除-->
<script type="text/javascript">
    //document.cookie = "username=John Doe";
    //var username = document.cookie;
    //console.log(username);
    //setCookie("name","hayden");
    //console.log(getCookie("name"));
    //delCookie("name");
    //console.log(getCookie("name"));
    $(document).ready(function(){
        //delCookie("ids");
        var ids = getCookie("ids");
        if(ids.length != 0){
            var id_list = ids.split(',');
            var length = id_list.length;
            $("#App-table .App-check").each(function(){
                console.log($(this).val());
                for(var i = 0;i<length;i++){
                    if($(this).val() == id_list[i]){
                        $(this).prop("checked","checked");
                    }
                }
            });
        }
    });
    //全选
    var checkall=$('#App-table .App-checkall');
    var checks=$('#App-table .App-check');
    var trs=$('#App-table tbody tr');
    var id = '';
    $(checkall).on('click',function(){
        if($(this).is(":checked")){
            $(checks).prop("checked","checked");
            $(checks).each(function(){
                id = $(this).val();
                add_ids(id);
            });
        }else{
            $(checks).removeAttr("checked");
            $(checks).each(function(){
                id = $(this).val();
                delect_ids(id);
            });
        }
    });
    $(trs).on('click',function(){
        var c = $(this).find("input[type=checkbox]");
        id = $(c).val();
        if($(c).is(":checked")){
            delect_ids(id);
            $(c).removeAttr("checked");
        }else{
            add_ids(id);
            $(c).prop("checked","checked");
        }
    });

    //添加id到Cookie
    function add_ids(id){
        if(!checknum(id))return;
        var ids = getCookie("ids");
        var id_list = ids.split(',');
        var length = id_list.length;
        var flag = 0;
        for(var i = 0;i<length;i++){
            if(id_list[i] == id){
                flag = 1;
                break;
            }
        }
        if(flag == 0){
            if(ids.length == 0){
                ids = id;
            }else{
                ids = ids +','+id;
            }
        }
        setCookie("ids",ids);
    }
    //从Cookie删除id
    function delect_ids(id){
        var ids = getCookie("ids");
        var id_list = ids.split(',');
        var length = id_list.length;
        for(var i = 0;i<length;i++){
            if(id_list[i] == id){
                id_list.splice(i,1);
                break;
            }
        }
        if(ids.length != 0){
            ids = id_list.join(',');
            setCookie("ids",ids);
        }else{
            setCookie("ids",'');
        }
    }
    //全删
    $('#App-delall').on('click',function(){
        var checks=$(".App-check:checked");
        var chk='';
		/*$(checks).each(function(){
		 chk+=$(this).val()+',';
		 });*/
        chk = getCookie("ids");
        if(!chk){
            $.App.alert('danger','请选择要删除的项目！');
            return false;
        }
        var toajax="{:url('Dlc/Advertisement/slideDel')}"+"/id/"+chk;
        var funok=function(){
            var callok=function(){
                //成功删除后刷新
                $('#refresh-toggler').trigger('click');
                delCookie("ids");
                return false;
            };
            var callerr=function(){
                //拦截错误
                return false;
            };
            $.App.ajax('post',toajax,'nodata',callok,callerr);
        }
        $.App.confirm("确认要删除吗？",funok);
    });
    //设置 cookie 值的函数
    function setCookie(cname,cvalue,exdays)
    {
        var d = new Date();
        d.setTime(d.getTime()+(exdays*24*60*60*1000));
        var expires = "expires="+d.toGMTString();
        document.cookie = cname + "=" + cvalue + "; " + expires;
    }
    //获取 cookie 值的函数
    function getCookie(cname)
    {
        var name = cname + "=";
        var ca = document.cookie.split(';');
        for(var i=0; i<ca.length; i++)
        {
            var c = ca[i].trim();
            if (c.indexOf(name)==0) return c.substring(name.length,c.length);
        }
        return "";
    }
    //检测 cookie 值的函数
    function checkCookie()
    {
        var user=getCookie("username");
        if (user!="")
        {
            alert("Welcome again " + user);
        }
        else
        {
            user = prompt("Please enter your name:","");
            if (user!="" && user!=null)
            {
                setCookie("username",user,365);
            }
        }
    }
    function delCookie(name)
    {
        var exp = new Date();
        exp.setTime(exp.getTime() - 1);
        var cval=getCookie(name);
        if(cval!=null)
            document.cookie= name + "="+cval+";expires="+exp.toGMTString();
    }

    function checknum(value) {
        if (isNaN(value)) {
            return false;
        }
        return true;
    }
    //删除cookie
    //document.cookie = "username=; expires=Thu, 01 Jan 1970 00:00:00 GMT";
</script>
<!--/全选特效封装-->