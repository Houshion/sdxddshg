<script type="text/javascript" charset="utf-8" src="__PUBLIC__/Dlc/ueditor/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="__PUBLIC__/Dlc/ueditor/ueditor.all.min.js"></script>
<div class="row">
    <div class="col-xs-12 col-xs-12">
        <div class="widget radius-bordered">
            <div class="widget-header bg-blue">
                <i class="widget-icon fa fa-arrow-down"></i>
                <span class="widget-caption">商品类别编辑</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    <a href="#" data-toggle="dispose">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <form id="AppForm" action="" method="post" class="form-horizontal" data-bv-message="" data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
                      data-bv-feedbackicons-invalid="glyphicon glyphicon-remove" data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">
                    <div class="form-title">
                        <a href="{:url('shop/goods/index')}" class="btn btn-primary" data-loader="App-loader" data-loadername="用户列表" id="refresh-back" >
                            <i class="fa fa-mail-reply"></i>返回
                        </a>
                    </div>


                    <input type="hidden" name="goods_id" value="{$result['goods_id']}">


                    <div class="form-group">
                        <label class="col-lg-2 control-label">商品名称<sup>*</sup></label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="title" placeholder="必填" required="required"
                                   value="{$result['title']}">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-2 control-label">商品图片</label>
                        <div class="col-lg-4">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" name="img" value="{$result.img}" id="App-pic" data-bv-notempty-message="不能为空">
                                <span class="input-group-btn">
                                    <button class="btn btn-default shiny" type="button" onclick="appImgviewers('App-pic','1')">
                                        <i class="fa fa-camera-retro"></i>预览</button>
                                    <button class="btn btn-default shiny" type="button" onclick="appImguploaders('App-pic',false,'1')">
                                        <i class="glyphicon glyphicon-picture"></i>上传</button>
                                </span>
                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-lg-2 control-label">商品类型<sup>*</sup></label>
                        <div class="col-lg-4">
                            <select class="form-control" name="type_id" required="required">
                                <option value="">请选择</option>
                                {volist name="goodsType" id="vo"}
                                <option value="{$vo['type_id']}" {if condition="$vo['type_id'] eq $result['type_id']"}selected{/if} >{$vo['type']}</option>
                                {/volist}
                            </select>
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-lg-2 control-label">商品重量（kg）<sup>*</sup></label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="weight" placeholder="必填" required="required"
                                   value="{$result['weight']}">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-2 control-label">商品单位<sup>*</sup></label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="unit" placeholder="必填" required="required"
                                   value="{$result['unit']}">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-2 control-label">商品单价（元）<sup>*</sup></label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="price" placeholder="必填" required="required"
                                   value="{$result['price']}">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-2 control-label">商品成本价（元）<sup>*</sup></label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="cost" placeholder="必填" required="required"
                                   value="{$result['cost']}">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-2 control-label">rfid列表(,号分割)</label>
                        <div class="col-sm-4">
                            <textarea class="form-control rfid" id="rfid" name="rfid" rows="8"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">上传rfid文本(txt)</label>
                        <div class="col-sm-10">
                            <input type="file" name="upfile" id="upfile" value="" />
                            <!--<input type="button" value="上传" id="btn"/>-->
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-4">
                            <button class="btn btn-primary btn-lg" type="submit" id="save">保存</button>&nbsp;&nbsp;&nbsp;&nbsp;
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--面包屑导航封装-->
<div id="tmpbread" style="display: none;">{$breadhtml}</div>
<script type="text/javascript">
    setBread($('#tmpbread').html());
</script>
<!--/面包屑导航封装-->
<!--表单验证与提交封装-->
<script type="text/javascript">
    $('#AppForm').bootstrapValidator({
        submitHandler: function (validator, form, submitButton) {
            var tourl = "{:url('/shop/goods/edit')}";
            var data = $('#AppForm').serialize();
            var funok=function(){
                var callok=function(){
                    //成功删除后刷新
                    $('#refresh-back').trigger('click');
                    return false;
                };
                var callerr=function(){
                    //拦截错误
                    return false;
                };
                $.App.ajax('post',tourl,data,callok,callerr);
            }
            funok();
//            $.App.ajax('post', tourl, data, null);
//            return false;
        }});

    $('#save').click(function () {
        var type = $("select[name='type_id']").val();
        if (type==false){
            alert('请选择类型');
            return;
        }
    })


    document.getElementById("upfile").addEventListener('change',function () {
        var formData = new FormData();
        formData.append("pic",document.getElementById("upfile").files[0]);
        $.ajax({
            type: "POST", // 数据提交类型
            url: "/shop/goods/get_rfid", // 发送地址
            data: formData, //发送数据
            async: true, // 是否异步
            success:function(res){
                if (res.code == 2){
                    alert('文件类型错误！');
                    return;
                }
                $('.rfid').val(res.data);
            },
            processData: false, //processData 默认为false，当设置为true的时候,jquery ajax 提交的时候不会序列化 data，而是直接使用data
            contentType: false //
        });
    })

</script>
